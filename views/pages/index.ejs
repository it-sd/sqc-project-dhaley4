<%- include ('../partials/header.ejs') %>
<body>
  <div class="wrapper">
    <div id="codeInput">
      <div id="buttonGrid">
        <div class="gridButton" id="button1" onclick=insertNumber(1)>1</div>
        <div class="gridButton" id="button2" onclick=insertNumber(2)>2</div>
        <div class="gridButton" id="button3" onclick=insertNumber(3)>3</div>
        <div class="gridButton" id="button4" onclick=insertNumber(4)>4</div>
        <div class="gridButton" id="button5" onclick=insertNumber(5)>5</div>
        <div class="gridButton" id="button6" onclick=insertNumber(6)>6</div>
        <div class="gridButton" id="button7" onclick=insertNumber(7)>7</div>
        <div class="gridButton" id="button8" onclick=insertNumber(8)>8</div>
        <div class="gridButton" id="button9" onclick=insertNumber(9)>9</div>
        <div class="gridButton" id="buttonEnter" onclick=submitPasscode()>GO</div>
        <div class="gridButton" id="button0" onclick=insertNumber(0)>0</div>
        <div class="gridButton" id="buttonBack" onclick=backspace()>&leftarrow;</div>
      </div>
      <span id="codeDisplay">Awaiting Input...</span>
    </div>
    <div id="textArea">
      <textarea name="phraseTextArea" id="phraseTextArea" cols="30" rows="10" readonly=false></textarea>
    </div>
  </div>
</body>
</html>